<h1>Create an article</h1>
<%= link_to "Back to articles listing", articles_path %>
<% if @article.errors.any? %>
<h2>The following errors prevented the artcile from getting created</h2>
<ul>
  <% @artcile.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit %>

<% end %>
